@model CarbonFootPrint.Models.RecycleQuantity
@{
    ViewBag.Title = "RecycleMain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("/Content/images/RecycleCoverPic.jpg");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .Output {
           
            background-color: lightgray;
            padding-top: 50px;
            padding-right: 30px;
            padding-bottom: 50px;
            padding-left: 80px;
        }
        .boxModel{
              background-color: lightgrey;
              width: 1100px;
              border: 1px solid green;
              padding: 50px;
              margin: 20px;
            }
    

        h2, h3, Label {
            color: white;
        }

        table, tr, td{
            color:black;
        }
    </style>
</head>
<body>
    

    @using (Html.BeginForm("RecycleMain", "Recycles", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <br /><br />

        <h2 style="text-align:center; color:white">Recycle Carbon Calculator</h2> <br />
        <p style="text-align:center; color:white"><i>Recycling - a most straightforward way to cut down the carbon emissions</i></p> <br />

        <div class="boxModel">

        <div class="row">
            <div class="col-12 col-md-8">


                <table class="table" >
                    <tr>
                        <td>
                            <h4 style="text-align:center; color:black"><i> Recyle Items </i></h4>
                        </td>
                        <td>
                            <h4 style="text-align:center; color:black"><i> Quantity (eg: 1,2,3...)</i></h4>
                            
                        </td>
                    </tr>

                    <tr>
                        <td >
                            <i> Glass</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.glassQty, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>

                    <tr>
                        <td >
                            <i>Aluminium</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.aluminiumQty, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>

                    <tr>
                        <td >
                            <i> Steel</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.steelQty, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <i>Plastics</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.plasticsQty, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <i>Paper and Cardboard</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.pcQty, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>

                    <tr >
                        <td>
                            <i>Organic Waste(Composting)</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.owcQty, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <i>Organic Waste(Digestion)</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.owdQty, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                </table>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calculate Your footprint" class="btn btn-default" style="justify-content: center;" />
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <br/><br/><br/>

                @if (ViewBag.finalTotalQty != null)
                {
                <div class="Output">

                    <h4 style="color:darkslateblue">Actual CO2 Emission is: </h4>
                    <p style="color:darkslateblue"> @ViewBag.finalTotalQty</p>
                </div>
                }

                @if (ViewBag.finalReducedQty != null)
                {
                <div class="Output">

                    <h4 style="color:darkslateblue">Your Reduced CO2 Emission is: </h4>
                    <p style="color:darkslateblue"> @ViewBag.finalReducedQty</p>
                </div>
                }


            </div>
        </div>
            </div>
    }




</body>
</html>


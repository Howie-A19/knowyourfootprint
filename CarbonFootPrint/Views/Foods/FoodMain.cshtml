@model CarbonFootPrint.Models.Food

<!DOCTYPE html>
@{
    ViewBag.Title = "FoodMain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        body {
    background-image: url("/Content/images/foodCoverPage.jpg");
    background-position:bottom; 
    background-repeat: no-repeat;
    background-size:cover;

    
}
        h2,h3,LabelFor, Label{
            color:black;
        }

         .Output {
           
            background-color: lightgray;
            padding-top: 50px;
            padding-right: 30px;
            padding-bottom: 50px;
            padding-left: 80px;
        }
          .boxModel{
              background-color: lightgrey;
              width: 1100px;
              border: 1px solid green;
              padding: 50px;
              margin: 20px;
            }
    </style>
</head>
<body>
    @using (Html.BeginForm("FoodMain", "Foods", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        <h2 style="text-align:center; color:white"><i>Food Carbon Calculator</i></h2> <br />
        <p style="text-align:center; color:white"><i>Tell us what you had in food and calculate the impact of your food consumptions on the climate change<</i></p> <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="boxModel">


    <div class="row">
        <div class="col-12 col-md-8">


            <div class="form-group">
                <i> @Html.LabelFor(model => model.Category, "Category: ", htmlAttributes: new { @class = "control-label col-md-2" })</i>
                <div class="col-md-10">

                    @*@Html.DropDownList("Category",null, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.Category, (SelectList)ViewBag.Category, "-select-")
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </div> <br /><hr />
            </div>

            <h3 style="color:black">Calculate against your frequency usage</h3>
            <div class="form-group">

                <i> @Html.LabelFor(model => model.frequency, "Consumed Frequency: ", htmlAttributes: new { @class = "control-label col-md-2" })</i>
                <div class="col-md-10">

                    @Html.DropDownListFor(model => model.frequency, (SelectList)ViewBag.ViewFrequencyList, "-select-")
                    @Html.ValidationMessageFor(model => model.frequency, "", new { @class = "text-danger" })
                </div>
            </div><br />
            <h2><i>OR</i></h2>
            <hr />

            <h3 style="color:black">Calculate against Nutritional Fact</h3>
            <div class="form-group">

                <i> @Html.Label("Nutritional Fact: ", htmlAttributes: new { @class = "control-label col-md-2" })</i>

                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.nutrition, (SelectList)ViewBag.ViewNutritionList, "-select-")
                    @Html.ValidationMessageFor(model => model.nutrition, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br/>
            <div class="form-group">

                <i> @Html.LabelFor(model => model.input, "Input (eg: 100,1000):", htmlAttributes: new { @class = "control-label col-md-2" })</i>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.input, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.input, "", new { @class = "text-danger" })*@

                </div>
            </div><br/><br/>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Calculate" class="btn btn-default" />
                </div>
            </div>

        </div>



        <div class="col-6 col-md-4">
            <br /><br /><br />

            @if (ViewBag.carbonValue != null)
            {
                <div class="Output">
                    <h4 style="color:darkslateblue">Your CO2 Emission is: </h4>
                    <p style="color:darkslateblue"> @ViewBag.carbonValue</p>
                </div>
            }
        </div>
    </div>
</div>

            }

    </body>
</html>


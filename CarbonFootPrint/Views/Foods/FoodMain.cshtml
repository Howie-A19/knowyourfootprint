@model CarbonFootPrint.Models.Food

<!DOCTYPE html>
@{
    ViewBag.Title = "FoodMain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        body {
    background-image: url("/Content/images/foodCoverPage.jpg");
    background-position:bottom; 
    background-repeat: no-repeat;
    background-size:cover;

    
}
        h2,h3,LabelFor, Label{
            color:white;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("FoodMain", "Foods", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

           <h2 style="text-align:center; color:white">Food Carbon Calculator</h2> <br/>
            <p style="text-align:center; color:white">Tell us what you had in food and calculate the impact of your food consumptions on the climate change</p> <br/><hr/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.Category, "Category: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @*@Html.DropDownList("Category",null, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.Category, (SelectList)ViewBag.Category, "-select-")
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </div> <br/><hr/>
            </div>

            <h3 style="color:white">Calculate against your frequency usage</h3>
            <div class="form-group">

                @Html.LabelFor(model => model.frequency, "Consumed Frequency: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.DropDownListFor(model => model.frequency, (SelectList)ViewBag.ViewFrequencyList, "-select-")
                    @Html.ValidationMessageFor(model => model.frequency, "", new { @class = "text-danger" })
                </div>
            </div>
            <h2>OR</h2>
            <hr/>

            <h3 style="color:white">Calculate against Nutritional Fact</h3>
            <div class="form-group">

                @Html.Label("Nutritional Fact: ", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.nutrition, (SelectList)ViewBag.ViewNutritionList, "-select-")
                    @Html.ValidationMessageFor(model => model.nutrition, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">

                @Html.LabelFor(model => model.input, "Input:", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.input, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.input, "", new { @class = "text-danger" })*@

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Calculate" class="btn btn-default" />
                </div>
            </div>

        </div>

        if (ViewBag.carbonValue != null)
        {
            <h4 style="color:white">Your CO2 Emission is: </h4>
            <p style="color:white"> @ViewBag.carbonValue</p>
        }

    }
</body>
</html>


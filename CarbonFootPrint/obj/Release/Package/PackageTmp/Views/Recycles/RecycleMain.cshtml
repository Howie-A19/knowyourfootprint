@model CarbonFootPrint.Models.RecycleQuantity
@{
    ViewBag.Title = "RecycleMain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
     

        .Output {
           
            background-color: lightgray;
            padding-top: 50px;
            padding-right: 30px;
            padding-bottom: 50px;
            padding-left: 30px;
        }
        .boxModel{
              background-color: lightgrey;
              width: 1100px;
              border: 1px solid green;
              padding: 30px;
              margin: 20px;
            }
    

        h2, h3, Label {
            color: black;
        }

        table, tr, td{
            color:black;
        }
    </style>
</head>
<body style="background-color:cadetblue">
    

    @using (Html.BeginForm("RecycleMain", "Recycles", FormMethod.Post))
    {
        @*@Html.AntiForgeryToken()*@
        <br /><br />

        <h2 style="text-align:center">Recycle Carbon Calculator</h2> <br />
        <p style="text-align:center">
            <b><i>Recycling - a most straightforward way to cut down the carbon emissions</i></b></p> <br />

        <div class="jumbotron">

        <div class="row">
            <div class="col-12 col-md-8">


                <table class="table" >
                    <tr>
                        <td>
                            <h4 style="text-align:center; color:black"><i> Recyle Items </i></h4>
                        </td>
                        <td>
                            <h4 style="text-align:center; color:black"><i> Quantity (kilograms)</i></h4>
                            
                        </td>
                    </tr>

                    <tr>
                        <td >
                            <i> Glass</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.glassQty, new { htmlAttributes = new { @class = "form-control",Value="0"} })
                        </td>
                    </tr>

                    <tr>
                        <td >
                            <i>Aluminium</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.aluminiumQty, new { htmlAttributes = new { @class = "form-control",Value="0" } })
                        </td>
                    </tr>

                    <tr>
                        <td >
                            <i> Steel</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.steelQty, new { htmlAttributes = new { @class = "form-control" ,Value="0"} })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <i>Plastics</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.plasticsQty, new { htmlAttributes = new { @class = "form-control",Value="0" } })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <i>Paper and Cardboard</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.pcQty, new { htmlAttributes = new { @class = "form-control",Value="0" } })
                        </td>
                    </tr>

                    <tr >
                        <td>
                            <i>Organic Waste(Composting)</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.owcQty, new { htmlAttributes = new { @class = "form-control",Value="0" } })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <i>Organic Waste(Digestion)</i>
                        </td>
                        <td>
                            @Html.EditorFor(model => model.owdQty, new { htmlAttributes = new { @class = "form-control",Value="0" } })
                        </td>
                    </tr>
                </table>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calculate carbon footprint" class="btn btn-default" style="justify-content: center;" />
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <br/><br/><br/>

                @if (ViewBag.finalTotalQty != null && ViewBag.finalReducedQty != null)
                {
            <div class="Output">
                <div class="label">

                    <h4 style="color:black">Actual CO2 Emission is: </h4>
                    <p style="color:black"><b> @ViewBag.finalTotalQty Kg of CO<sub>2</sub></b></p><br />

                    <h4 style="color:black">Your Reduced CO2 Emission is: </h4>
                    <p style="color:black"><b> @ViewBag.finalReducedQty Kg of CO<sub>2</sub></b></p> <br />
                    <p style="color:black"><b> You have reduced <br/>@ViewBag.reducedCO Kg of CO<sub>2</sub></b></p>
                </div>
                </div>
                }

             

            </div>
        </div>
            </div>
    }




</body>
</html>


@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE HTML>
<html>

<head>
    @*<meta charset="utf-8">*@
    @*<link href="~/Content/css/main.css" rel="stylesheet" />*@

    @Styles.Render("~/css/theme")
 <style>
     body {
    background-color: cadetblue;
}
 </style>

</head>
<body>
    @using (Html.BeginForm())
    {
        
        <br />
        <div class="container">
          <div class="form-horizontal">
              <div class="jumbotron" style="background-color:mediumaquamarine">

                  
              <h3 style="text-align:center"><b><i> Welcome to Know your Carbon Footprint</i></b></h3>
                 
              <div class="row">
                  <div class="col-12 col-md-6">
                      <br />

                      <div class="jumbotron">

                          <div class="form-group">

                              <h2 style="color:black;font-style:italic" align="left">Students towards <br /> Net zero Carbon Emissions</h2><br /><br />

                              <div class="center-block">
                                  <a href="@Url.Action("FoodMain", "Foods")"><img src="~/Content/images/icons/homeStudentOne.png" class="rounded" width="300" height="300" alt="hello image"></a>
                              </div>
                              <br /><br />
                              <p style="color:black;font-style:italic" align="left">
                                  Check Carbon Emissions from your daily lifestyle activities and
                                  learn exciting & engaging ways to adapt to a sustainable and
                                  greener lifestyle
                              </p>
                          </div>
                      </div>   
                    


                  </div>

                  <div class="col-6 col-md-6">
                      <br />
                      <div class="jumbotron">
                          <div class="text-center">

                              <h3 style="color:black;font-style:italic" align="left">
                                  Best to way to reduce your carbon emission on daily activities
                              </h3> <br/>
                              <h4 style="text-align:center">
                                  Try <b><i> Lifestyles </i> </b>features <br />
                                  to calculate your <b><i> carbon footprints </i> </b>based on
                              </h4> <br/><br/>
                              <a href="@Url.Action("FoodMain", "Foods")"><img src="~/Content/images/icons/food/bread.png" class="rounded" width="100" height="100" alt="hello image"></a>
                              <a href="@Url.Action("ApparelMain", "Apparels")"><img src="~/Content/images/icons/homeCloth.png" class="rounded" width="100" height="100" alt="hello image"></a>
                              <a href="@Url.Action("RecycleMain", "Recycles")"><img src="~/Content/images/icons/homeRecycle.png" class="rounded" width="100" height="100" alt="hello image"></a>

                          </div>

                      </div>



                      <div class="jumbotron">
                          <h3 style="text-align:center"><i>Get tips and suggestions <br /> to reduce your carbon footprint</i> </h3>


                          <a href="@Url.Action("_SubscriberPartial", "Subscribers")" style="text-align:center"><h3><span class="glyphicon glyphicon-arrow-right"></span>  <i>Tips & Suggestions</i> </h3></a>
                      </div>

                  </div>

                  </div>
            </div> <br />
            </div>
        </div>
    }
</body>
</html>
